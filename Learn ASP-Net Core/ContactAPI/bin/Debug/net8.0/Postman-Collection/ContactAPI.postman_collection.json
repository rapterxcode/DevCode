{
  "info": {
    "name": "Contact API",
    "description": "A comprehensive collection for testing the Contact API endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "https://localhost:7001",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/contacts/health",
          "host": ["{{baseUrl}}"],
          "path": ["api", "contacts", "health"]
        },
        "description": "Check if the API is running"
      },
      "response": []
    },
    {
      "name": "Get All Contacts",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/contacts",
          "host": ["{{baseUrl}}"],
          "path": ["api", "contacts"]
        },
        "description": "Retrieve all contacts with optional pagination and search"
      },
      "response": []
    },
    {
      "name": "Get All Contacts with Search",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/contacts?search=john&page=1&pageSize=5",
          "host": ["{{baseUrl}}"],
          "path": ["api", "contacts"],
          "query": [
            {
              "key": "search",
              "value": "john",
              "description": "Search term"
            },
            {
              "key": "page",
              "value": "1",
              "description": "Page number"
            },
            {
              "key": "pageSize",
              "value": "5",
              "description": "Items per page"
            }
          ]
        },
        "description": "Search contacts with pagination"
      },
      "response": []
    },
    {
      "name": "Get Contact by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/contacts/1",
          "host": ["{{baseUrl}}"],
          "path": ["api", "contacts", "1"]
        },
        "description": "Retrieve a specific contact by ID"
      },
      "response": []
    },
    {
      "name": "Get Contact by Email",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/contacts/email/john.doe@example.com",
          "host": ["{{baseUrl}}"],
          "path": ["api", "contacts", "email", "john.doe@example.com"]
        },
        "description": "Retrieve a contact by email address"
      },
      "response": []
    },
    {
      "name": "Create Contact",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"firstName\": \"John\",\n  \"lastName\": \"Doe\",\n  \"email\": \"john.doe@example.com\",\n  \"phoneNumber\": \"+1234567890\",\n  \"address\": \"123 Main St, City, State 12345\"\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{baseUrl}}/api/contacts",
          "host": ["{{baseUrl}}"],
          "path": ["api", "contacts"]
        },
        "description": "Create a new contact"
      },
      "response": []
    },
    {
      "name": "Create Contact (Minimal)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"firstName\": \"Jane\",\n  \"lastName\": \"Smith\",\n  \"email\": \"jane.smith@example.com\",\n  \"phoneNumber\": \"+0987654321\"\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{baseUrl}}/api/contacts",
          "host": ["{{baseUrl}}"],
          "path": ["api", "contacts"]
        },
        "description": "Create a contact with minimal required fields"
      },
      "response": []
    },
    {
      "name": "Update Contact (Full)",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"firstName\": \"John\",\n  \"lastName\": \"Smith\",\n  \"email\": \"john.smith@example.com\",\n  \"phoneNumber\": \"+1234567890\",\n  \"address\": \"456 Oak Ave, Town, State 67890\"\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{baseUrl}}/api/contacts/1",
          "host": ["{{baseUrl}}"],
          "path": ["api", "contacts", "1"]
        },
        "description": "Update all fields of a contact"
      },
      "response": []
    },
    {
      "name": "Update Contact (Partial)",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"firstName\": \"Jane\",\n  \"lastName\": \"Johnson\"\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{baseUrl}}/api/contacts/1",
          "host": ["{{baseUrl}}"],
          "path": ["api", "contacts", "1"]
        },
        "description": "Update only specific fields of a contact"
      },
      "response": []
    },
    {
      "name": "Delete Contact",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/contacts/1",
          "host": ["{{baseUrl}}"],
          "path": ["api", "contacts", "1"]
        },
        "description": "Delete a contact by ID"
      },
      "response": []
    },
    {
      "name": "Error Tests",
      "item": [
