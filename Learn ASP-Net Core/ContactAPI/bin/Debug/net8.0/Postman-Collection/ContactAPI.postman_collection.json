              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"firstName\": \"Test\",\n  \"lastName\": \"User\",\n  \"email\": \"invalid-email\",\n  \"phoneNumber\": \"+1234567890\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/api/contacts",
              "host": ["{{baseUrl}}"],
              "path": ["api", "contacts"]
            },
            "description": "Test validation error for invalid email"
          },
          "response": []
        },
        {
          "name": "Create Contact - Duplicate Email",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"firstName\": \"Duplicate\",\n  \"lastName\": \"User\",\n  \"email\": \"john.doe@example.com\",\n  \"phoneNumber\": \"+1234567890\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/api/contacts",
              "host": ["{{baseUrl}}"],
              "path": ["api", "contacts"]
            },
            "description": "Test conflict error for duplicate email"
          },
          "response": []
        },
        {
          "name": "Get Contact - Not Found",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/contacts/999",
              "host": ["{{baseUrl}}"],
              "path": ["api", "contacts", "999"]
            },
            "description": "Test 404 error for non-existent contact"
          },
          "response": []
        }
      ],
      "description": "Test various error scenarios"
    }
  ]
} 