{
  "info": {
    "name": "Contact API",
    "description": "A comprehensive collection for testing the Contact API endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "https://localhost:7001",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/contacts/health",
          "host": ["{{baseUrl}}"],
          "path": ["api", "contacts", "health"]
        },
        "description": "Check if the API is running"
      },
      "response": []
    },
    {
      "name": "Get All Contacts",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/contacts",
          "host": ["{{baseUrl}}"],
          "path": ["api", "contacts"]
        },
        "description": "Retrieve all contacts with optional pagination and search"
      },
      "response": []
    },
    {
      "name": "Get All Contacts with Search",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/contacts?search={{searchTerm}}&page={{pageNumber}}&pageSize={{pageSize}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "contacts"],
          "query": [
            {
              "key": "search",
              "value": "{{searchTerm}}",
              "description": "Search term"
            },
            {
              "key": "page",
              "value": "{{pageNumber}}",
              "description": "Page number"
            },
            {
              "key": "pageSize",
              "value": "{{pageSize}}",
              "description": "Items per page"
            }
          ]
        },
        "description": "Search contacts with pagination"
      },
      "response": []
    },
    {
      "name": "Get Contact by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/contacts/{{contactId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "contacts", "{{contactId}}"]
        },
        "description": "Retrieve a specific contact by ID"
      },
      "response": []
    },
    {
      "name": "Get Contact by Email",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/contacts/email/{{sampleEmail}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "contacts", "email", "{{sampleEmail}}"]
        },
        "description": "Retrieve a contact by email address"
      },
      "response": []
    },
    {
      "name": "Create Contact",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "{{contentType}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"firstName\": \"{{sampleFirstName}}\",\n  \"lastName\": \"{{sampleLastName}}\",\n  \"email\": \"{{sampleEmail}}\",\n  \"phoneNumber\": \"{{samplePhoneNumber}}\",\n  \"address\": \"{{sampleAddress}}\"\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{baseUrl}}/api/contacts",
          "host": ["{{baseUrl}}"],
          "path": ["api", "contacts"]
        },
        "description": "Create a new contact"
      },
      "response": []
    },
    {
      "name": "Create Contact (Minimal)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "{{contentType}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"firstName\": \"{{testFirstName}}\",\n  \"lastName\": \"{{testLastName}}\",\n  \"email\": \"{{testEmail}}\",\n  \"phoneNumber\": \"{{testPhoneNumber}}\"\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{baseUrl}}/api/contacts",
          "host": ["{{baseUrl}}"],
          "path": ["api", "contacts"]
        },
        "description": "Create a contact with minimal required fields"
      },
      "response": []
    },
    {
      "name": "Update Contact (Full)",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "{{contentType}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"firstName\": \"{{sampleFirstName}}\",\n  \"lastName\": \"Smith\",\n  \"email\": \"john.smith@example.com\",\n  \"phoneNumber\": \"{{samplePhoneNumber}}\",\n  \"address\": \"{{testAddress}}\"\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{baseUrl}}/api/contacts/{{contactId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "contacts", "{{contactId}}"]
        },
        "description": "Update all fields of a contact"
      },
      "response": []
    },
    {
      "name": "Update Contact (Partial)",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "{{contentType}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"firstName\": \"{{testFirstName}}\",\n  \"lastName\": \"Johnson\"\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{baseUrl}}/api/contacts/{{contactId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "contacts", "{{contactId}}"]
        },
        "description": "Update only specific fields of a contact"
      },
      "response": []
    },
    {
      "name": "Delete Contact",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/contacts/{{contactId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "contacts", "{{contactId}}"]
        },
        "description": "Delete a contact by ID"
      },
      "response": []
    },
    {
      "name": "Error Tests",
      "item": [
        {
          "name": "Create Contact - Invalid Email",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "{{contentType}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"firstName\": \"{{testFirstName}}\",\n  \"lastName\": \"{{testLastName}}\",\n  \"email\": \"invalid-email\",\n  \"phoneNumber\": \"{{testPhoneNumber}}\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/api/contacts",
              "host": ["{{baseUrl}}"],
              "path": ["api", "contacts"]
            },
            "description": "Test validation error for invalid email"
          },
          "response": []
        },
        {
          "name": "Create Contact - Duplicate Email",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "{{contentType}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"firstName\": \"Duplicate\",\n  \"lastName\": \"User\",\n  \"email\": \"{{sampleEmail}}\",\n  \"phoneNumber\": \"{{testPhoneNumber}}\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/api/contacts",
              "host": ["{{baseUrl}}"],
              "path": ["api", "contacts"]
            },
            "description": "Test conflict error for duplicate email"
          },
          "response": []
        },
        {
          "name": "Get Contact - Not Found",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/contacts/999",
              "host": ["{{baseUrl}}"],
              "path": ["api", "contacts", "999"]
            },
            "description": "Test 404 error for non-existent contact"
          },
          "response": []
        }
      ],
      "description": "Test various error scenarios"
    }
  ]
} 